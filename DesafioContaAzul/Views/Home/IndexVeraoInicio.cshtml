@model dynamic

@{
    ViewBag.Title = "Marte-NASA";
}

<style type="text/css">
    #divCenter {
        width: 400px;
        height: 400px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -200px;
        margin-left: -200px;
    }

    #tabuleiro {
        background-color: #000000;
        border: 1px;
    }

    table tr {
        height: 70px;
        text-align: center;
    }

